@page
@model PayByDay.Pages.Expenses

@{
    Layout = "_Sidebar";
    ViewData["Title"] = "Expenses";
}

<H2>Expenses</H2>

<form method="post">
    <div class="form-group">
        <label asp-for="NewExpense.Name"></label>
        <input asp-for="NewExpense.Name" class="form-control" />
        <span asp-validation-for="NewExpense.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewExpense.Date"></label>
        <input asp-for="NewExpense.Date" class="form-control" type="date" />
        <span asp-validation-for="NewExpense.Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewExpense.Amount"></label>
        <input asp-for="NewExpense.Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="NewExpense.Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewExpense.Frequency"></label>
        <select asp-for="NewExpense.Frequency" class="form-control" asp-items="Html.GetEnumSelectList<PayByDay.Models.Frequency>()"></select>
        <span asp-validation-for="NewExpense.Frequency" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewExpense.DateOfLastOccurrence"></label>
        <input asp-for="NewExpense.DateOfLastOccurrence" class="form-control" type="date" />
        <span asp-validation-for="NewExpense.DateOfLastOccurrence" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Expense</button>
</form>

<hr />

@await Html.PartialAsync("_ResponsiveTable", Model.Expenses1)
