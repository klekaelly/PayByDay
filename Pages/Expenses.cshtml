@page
@model PayByDay.Pages.Expenses

@{
    Layout = "_Sidebar";
    ViewData["Title"] = "Expenses";
}

<h2>Expenses</h2>

<div class="container mt-4">
    <ul class="nav nav-tabs" id="expensesTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="expense-list-tab" data-bs-toggle="tab" data-bs-target="#expense-list" type="button" role="tab" aria-controls="expense-list" aria-selected="true">Expense List</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="add-expense-tab" data-bs-toggle="tab" data-bs-target="#add-expense" type="button" role="tab" aria-controls="add-expense" aria-selected="false">Add Expense</button>
        </li>
    </ul>
    <div class="tab-content" id="expensesTabContent">
        <div class="tab-pane fade show active" id="expense-list" role="tabpanel" aria-labelledby="expense-list-tab">
            <div class="card mt-3">
                <div class="card-body">
                    @await Html.PartialAsync("_ResponsiveTable", Model.Expenses1)
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="add-expense" role="tabpanel" aria-labelledby="add-expense-tab">
            <div class="card mt-3">
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="NewExpense.Name" class="form-label"></label>
                            <input asp-for="NewExpense.Name" class="form-control" />
                            <div class="text-danger">
                                <span asp-validation-for="NewExpense.Name"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewExpense.Date" class="form-label"></label>
                            <input asp-for="NewExpense.Date" class="form-control" type="date" />
                            <div class="text-danger">
                                <span asp-validation-for="NewExpense.Date"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewExpense.Amount" class="form-label"></label>
                            <input asp-for="NewExpense.Amount" class="form-control" type="number" step="0.01" />
                            <div class="text-danger">
                                <span asp-validation-for="NewExpense.Amount"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewExpense.Frequency" class="form-label"></label>
                            <select asp-for="NewExpense.Frequency" class="form-select" asp-items="Html.GetEnumSelectList<PayByDay.Models.Frequency>()"></select>
                            <div class="text-danger">
                                <span asp-validation-for="NewExpense.Frequency"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewExpense.DateOfLastOccurrence" class="form-label"></label>
                            <input asp-for="NewExpense.DateOfLastOccurrence" class="form-control" type="date" />
                            <div class="text-danger">
                                <span asp-validation-for="NewExpense.DateOfLastOccurrence"></span>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Expense</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
