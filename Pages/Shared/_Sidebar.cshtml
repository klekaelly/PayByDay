<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Pay by Day</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true"/>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div id="sidebar" class="col-12 col-sm-4 col-md-3 col-lg-2 bg-dark text-white vh-100 d-flex flex-column">
            <ul class="nav nav-pills flex-column mb-auto ps-3 pe-3 pt-3">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/" aria-current="page">Pay by Day</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Overview">Overview</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Purchases">Purchases</a>
                </li>
                <li class="nav-item">
                     <a class="nav-link text-white" asp-page="/Goals">Goals</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-page="/Expenses">Expenses</a>
                </li>
            </ul>
            <div class="mt-auto ps-3 pe-3 pb-3">
                @if (!User.Identity.IsAuthenticated)
                {
                    <a class="nav-link text-white" asp-page="/Login">Login</a>
                }
                else
                {
                    <a class="nav-link text-white" href="javascript:void(0);" onclick="document.getElementById('logout-form').submit();">Logout</a>
                    <form id="logout-form" method="post" asp-page="/Logout" style="display: none;"></form>
                    <a class="nav-link text-white" asp-page="/Account/Manage/Index">Account Settings</a>
                }
                <a class="nav-link text-white" asp-page="/About">About</a>
            </div>
            <div class="resizer-handle"></div>
        </div>

        <div id="main" class="col-12 col-md-9">
            <div class="p-4">
                @RenderBody()
            </div>
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
